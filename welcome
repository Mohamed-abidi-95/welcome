AVERTISSEMENT: Le fichier n'existe pas: templates\cv_generator\partials\template_carousel.html.twig

===================================================
FICHIER: public\js\cv-examples-carousel.js
===================================================
/**
 * CV Examples Carousel - Animation automatique et contrÃ´les
 * Date: 2025-04-27
 * Auteur: Mohamed-abidi-95
 */

document.addEventListener('DOMContentLoaded', function() {
    // Ã‰lÃ©ments du DOM
    const carousel = document.querySelector('.cv-examples-carousel');
    if (!carousel) return; // Sortir si le carrousel n'existe pas

    const slides = carousel.querySelectorAll('.cv-slide');
    const prevBtn = carousel.querySelector('.prev-btn');
    const nextBtn = carousel.querySelector('.next-btn');
    const indicators = carousel.querySelectorAll('.indicator');
    const templateLabels = carousel.querySelectorAll('.template-label');

    // Variables de contrÃ´le
    let currentIndex = 0;
    const totalSlides = slides.length;
    let autoplayInterval;
    const autoplayDelay = 7000; // 7 secondes entre chaque transition

    // Initialisation
    initCarousel();

    // Fonctions
    function initCarousel() {
        // Configuration initiale
        updateSlides();

        // DÃ©marrer l'autoplay
        startAutoplay();

        // Ã‰vÃ©nements des boutons
        prevBtn.addEventListener('click', showPrevSlide);
        nextBtn.addEventListener('click', showNextSlide);

        // Ã‰vÃ©nements des indicateurs
        indicators.forEach(indicator => {
            indicator.addEventListener('click', function() {
                const index = parseInt(this.getAttribute('data-index'));
                goToSlide(index);
            });
        });

        // Pause de l'autoplay au survol
        carousel.addEventListener('mouseenter', stopAutoplay);
        carousel.addEventListener('mouseleave', startAutoplay);

        // Gestion du focus pour l'accessibilitÃ©
        carousel.addEventListener('focusin', stopAutoplay);
        carousel.addEventListener('focusout', startAutoplay);

        // Gestion des touches clavier (accessibilitÃ©)
        carousel.addEventListener('keydown', function(e) {
            if (e.key === 'ArrowLeft') {
                showPrevSlide();
            } else if (e.key === 'ArrowRight') {
                showNextSlide();
            }
        });

        // Gestion des Ã©vÃ©nements tactiles (swipe)
        let touchStartX = 0;
        let touchEndX = 0;

        carousel.addEventListener('touchstart', function(e) {
            touchStartX = e.changedTouches[0].screenX;
        }, { passive: true });

        carousel.addEventListener('touchend', function(e) {
            touchEndX = e.changedTouches[0].screenX;
            handleSwipe();
        }, { passive: true });

        function handleSwipe() {
            const swipeThreshold = 50;
            if (touchEndX < touchStartX - swipeThreshold) {
                // Swipe gauche
                showNextSlide();
            } else if (touchEndX > touchStartX + swipeThreshold) {
                // Swipe droit
                showPrevSlide();
            }
        }
    }

    function updateSlides() {
        // Mise Ã  jour des slides
        slides.forEach((slide, index) => {
            slide.classList.remove('active', 'prev');

            if (index === currentIndex) {
                slide.classList.add('active');
                slide.setAttribute('aria-hidden', 'false');
            } else {
                slide.setAttribute('aria-hidden', 'true');
                if (index === getPrevIndex()) {
                    slide.classList.add('prev');
                }
            }
        });

        // Mise Ã  jour des indicateurs
        indicators.forEach((indicator, index) => {
            if (index === currentIndex) {
                indicator.classList.add('active');
                indicator.setAttribute('aria-selected', 'true');
            } else {
                indicator.classList.remove('active');
                indicator.setAttribute('aria-selected', 'false');
            }
        });

        // Mise Ã  jour des Ã©tiquettes de template
        templateLabels.forEach((label, index) => {
            if (index === currentIndex) {
                label.classList.add('active');
                label.style.opacity = '1';
            } else {
                label.classList.remove('active');
                label.style.opacity = '0';
            }
        });

        // Annoncer le changement pour les lecteurs d'Ã©cran
        const liveRegion = carousel.querySelector('.sr-only-announcement');
        if (liveRegion) {
            liveRegion.textContent = `Template ${currentIndex + 1} sur ${totalSlides} affichÃ©`;
        }
    }

    function showNextSlide() {
        currentIndex = (currentIndex + 1) % totalSlides;
        updateSlides();
        resetAutoplay();
    }

    function showPrevSlide() {
        currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
        updateSlides();
        resetAutoplay();
    }

    function goToSlide(index) {
        if (index >= 0 && index < totalSlides) {
            currentIndex = index;
            updateSlides();
            resetAutoplay();
        }
    }

    function getPrevIndex() {
        return (currentIndex - 1 + totalSlides) % totalSlides;
    }

    function startAutoplay() {
        stopAutoplay(); // ArrÃªter l'autoplay existant avant d'en dÃ©marrer un nouveau
        autoplayInterval = setInterval(showNextSlide, autoplayDelay);
    }

    function stopAutoplay() {
        if (autoplayInterval) {
            clearInterval(autoplayInterval);
        }
    }

    function resetAutoplay() {
        stopAutoplay();
        startAutoplay();
    }

    // Gestion de la visibilitÃ© de la page
    document.addEventListener('visibilitychange', function() {
        if (document.hidden) {
            stopAutoplay();
        } else {
            startAutoplay();
        }
    });

    // ArrÃªter l'autoplay si l'utilisateur navigue ou fait dÃ©filer la page
    window.addEventListener('blur', stopAutoplay);
    window.addEventListener('focus', startAutoplay);

    console.log('CV Examples Carousel initialized successfully');
});


