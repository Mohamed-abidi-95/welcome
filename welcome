document.addEventListener('DOMContentLoaded', function() {
    // VÃ©rifier si Tailwind CSS est correctement chargÃ©
    checkTailwindLoaded();

    // Initialiser le sÃ©lecteur de langue
    initLanguageSwitcher();

    // Initialiser le menu mobile
    initMobileMenu();
});

/**
 * VÃ©rifie si Tailwind CSS est correctement chargÃ©
 */
function checkTailwindLoaded() {
    // VÃ©rification de base : si la propriÃ©tÃ© --tw-ring-inset existe
    const hasTailwind = window.getComputedStyle(document.documentElement)
        .getPropertyValue('--tw-ring-inset') !== '';

    console.log('Tailwind CSS dÃ©tectÃ©:', hasTailwind);

    // Test plus approfondi avec un Ã©lÃ©ment de test
    const testElement = document.createElement('div');
    testElement.classList.add('hidden', 'md:block');
    testElement.style.position = 'absolute';
    testElement.style.visibility = 'hidden';
    document.body.appendChild(testElement);

    const computedStyle = window.getComputedStyle(testElement);
    const isResponsive = computedStyle.display === 'none';

    console.log('Classes rÃ©actives de Tailwind fonctionnelles:', isResponsive);

    // Nettoyage
    document.body.removeChild(testElement);

    // Alerte en cas de problÃ¨me
    if (!hasTailwind || !isResponsive) {
        console.warn('Tailwind CSS pourrait ne pas Ãªtre correctement chargÃ©. VÃ©rifiez votre installation.');
    }
}

/**
 * Initialise le sÃ©lecteur de langues
 */
function initLanguageSwitcher() {
    const dropdownButton = document.getElementById('language-dropdown-button') ||
        document.querySelector('[data-dropdown-toggle="language-dropdown-menu"]');
    const dropdownMenu = document.getElementById('language-dropdown-menu');

    if (!dropdownButton || !dropdownMenu) {
        console.error('Ã‰lÃ©ments du menu de langue non trouvÃ©s');
        return;
    }

    // Ouvrir/fermer le menu
    dropdownButton.addEventListener('click', function(e) {
        e.stopPropagation();
        dropdownMenu.classList.toggle('hidden');

        // Ajouter une classe pour l'animation
        if (!dropdownMenu.classList.contains('hidden')) {
            dropdownMenu.classList.add('animate-fade-in');
            setTimeout(() => dropdownMenu.classList.remove('animate-fade-in'), 300);
        }
    });

    // Fermer le menu en cliquant ailleurs
    document.addEventListener('click', function(e) {
        if (!dropdownButton.contains(e.target) && !dropdownMenu.contains(e.target)) {
            dropdownMenu.classList.add('hidden');
        }
    });

    // GÃ©rer les clics sur les options de langue
    const languageOptions = dropdownMenu.querySelectorAll('[data-lang]');
    languageOptions.forEach(option => {
        option.addEventListener('click', function(e) {
            e.preventDefault();

            const lang = this.getAttribute('data-lang');
            const flagSVG = this.querySelector('.inline-flex svg').outerHTML;
            const langText = this.innerText.trim();

            // Mettre Ã  jour l'affichage du bouton de sÃ©lection
            dropdownButton.innerHTML = `${flagSVG} ${langText}`;

            // Enregistrer le choix
            saveSelectedLanguage(lang);

            // Fermer le menu
            dropdownMenu.classList.add('hidden');

            // Mettez ici la logique pour changer la langue de l'interface
            changeLanguage(lang);
        });
    });

    // Charger la langue sauvegardÃ©e prÃ©cÃ©demment
    loadSavedLanguage();
}

/**
 * Sauvegarde la langue sÃ©lectionnÃ©e
 */
function saveSelectedLanguage(lang) {
    localStorage.setItem('esprit_cv_lang', lang);
    console.log('Langue sauvegardÃ©e:', lang);
}

/**
 * Charge la langue sauvegardÃ©e prÃ©cÃ©demment
 */
function loadSavedLanguage() {
    const savedLang = localStorage.getItem('esprit_cv_lang');
    if (savedLang) {
        const langOption = document.querySelector(`[data-lang="${savedLang}"]`);
        if (langOption) {
            // Simuler un clic pour appliquer la langue
            langOption.click();
        }
    }
}

/**
 * Change la langue de l'interface
 */
function changeLanguage(lang) {
    // Ici, vous pouvez utiliser les mÃ©thodes spÃ©cifiques Ã  votre application
    // pour changer la langue (par exemple, recharger la page avec un paramÃ¨tre de langue)
    console.log('Changement de langue vers:', lang);

    // Exemple : redirection avec paramÃ¨tre de langue
    // window.location.href = window.location.pathname + '?lang=' + lang;

    // Ou utiliser une approche AJAX pour charger les traductions
    // fetch(`/api/translations/${lang}`).then(response => response.json())...

    // Afficher un message de notification pour l'utilisateur
    showNotification(`Langue changÃ©e en "${getLangName(lang)}"`);
}

/**
 * Initialise le menu mobile
 */
function initMobileMenu() {
    const mobileMenuButton = document.querySelector('[data-collapse-toggle="navbar-language"]');
    const mobileMenu = document.getElementById('navbar-language');

    if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');

            // Animer l'ouverture/fermeture du menu
            if (!mobileMenu.classList.contains('hidden')) {
                mobileMenu.classList.add('animate-slide-down');
                setTimeout(() => mobileMenu.classList.remove('animate-slide-down'), 300);
            }
        });
    }
}

/**
 * Affiche une notification Ã  l'utilisateur
 */
function showNotification(message, type = 'info') {
    // Supprimer les anciennes notifications
    const oldNotifications = document.querySelectorAll('.language-notification');
    oldNotifications.forEach(notif => {
        notif.remove();
    });

    // CrÃ©er une nouvelle notification
    const notification = document.createElement('div');
    notification.className = `language-notification fixed top-4 right-4 z-50 px-4 py-2 rounded-lg shadow-lg ${getNotificationClass(type)}`;
    notification.textContent = message;

    // Ajouter au DOM
    document.body.appendChild(notification);

    // Animation d'entrÃ©e
    setTimeout(() => {
        notification.classList.add('opacity-100');
    }, 10);

    // Auto-fermeture aprÃ¨s 3 secondes
    setTimeout(() => {
        notification.classList.remove('opacity-100');
        notification.classList.add('opacity-0');

        setTimeout(() => {
            notification.remove();
        }, 300);
    }, 3000);
}

/**
 * Obtient la classe CSS pour le type de notification
 */
function getNotificationClass(type) {
    switch (type) {
        case 'success': return 'bg-green-500 text-white';
        case 'error': return 'bg-red-500 text-white';
        case 'warning': return 'bg-yellow-500 text-white';
        default: case 'info': return 'bg-blue-500 text-white';
    }
}

/**
 * Obtient le nom complet de la langue Ã  partir de son code
 */
function getLangName(code) {
    const langs = {
        'fr': 'FranÃ§ais',
        'en': 'English',
        'de': 'Deutsch',
        'ar': 'Ø§Ù„Ø¹Ø±Ø¨ÙŠØ©'
    };

    return langs[code] || code;
}

// Ajout des styles pour les animations
const style = document.createElement('style');
style.textContent = `
    .animate-fade-in {
        animation: fadeIn 0.3s ease-in-out;
    }
    
    .animate-slide-down {
        animation: slideDown 0.3s ease-in-out;
    }
    
    .language-notification {
        transition: opacity 0.3s ease-in-out;
        opacity: 0;
    }
    
    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    
    @keyframes slideDown {
        from { transform: translateY(-10px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }
`;
document.head.appendChild(style);

